{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'component-product-card.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .featuredcollections {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .featuredcollections {
      margin-top: {{ section.settings.margin_top }}px;
    }
  }

  .top-head {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.8rem;
    font-weight: 600;
    color: #333;
  }

  .top-head em {
    font-style: normal;
    color: #e6b550;
  }

  .top-head span {
    color: #000;
  }

  .customproductgrid {
    display: grid;
    grid-template-columns: repeat(4, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .viewalldiv {
    text-align: center;
    margin-top: 2rem;
  }

  .viewallbutton {
    display: inline-block;
    padding: 12px 30px;
    background: #e6b550;
    color: white;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .viewallbutton:hover {
    background: #d4a549;
    color: white;
  }

  .custom-container {
    max-width: 1400px;
    margin: 0 auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  @media (max-width: 749px) {
    .customproductgrid {
      grid-template-columns: repeat(1, 1fr);
      gap: 1rem;
    }

    .top-head {
      font-size: 2.2rem;
      margin-bottom: 2rem;
    }
  }

  @media (min-width: 750px) and (max-width: 1099px) {
    .customproductgrid {
      grid-template-columns: repeat(2, minmax(320px, 1fr));
      gap: 1.5rem;
    }
  }
{%- endstyle -%}

<section class="featuredcollections color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width custom-container">
    <h2 class="top-head">
      <em>{{ section.settings.heading_prefix }}</em>
      <span>{{ section.settings.heading_suffix }}</span>
    </h2>

    <div class="customproductgrid" id="template--{{ section.id }}__{{ section.id }}">
      {%- assign collection = collections[section.settings.featured_collection] -%}

      {%- liquid
        assign product1 = all_products[section.settings.featured_product_1] | default: collection.products[0]
        assign product2 = all_products[section.settings.featured_product_2] | default: collection.products[1]
        assign product3 = all_products[section.settings.featured_product_3] | default: collection.products[2]
        assign product4 = all_products[section.settings.featured_product_4] | default: collection.products[3]
      -%}

      {%- if product1 and product1 != empty -%}
        {% render 'product-card', product: product1 %}
      {%- endif -%}

      {%- if product2 and product2 != empty -%}
        {% render 'product-card', product: product2 %}
      {%- endif -%}

      {%- if product3 and product3 != empty -%}
        {% render 'product-card', product: product3 %}
      {%- endif -%}

      {%- if product4 and product4 != empty -%}
        {% render 'product-card', product: product4 %}
      {%- endif -%}
    </div>

    {%- if section.settings.show_view_all and section.settings.view_all_link != blank -%}
      <div class="viewalldiv">
        <a href="{{ section.settings.view_all_link }}" class="viewallbutton">
          {{ section.settings.view_all_text | default: 'VIEW ALL' }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

