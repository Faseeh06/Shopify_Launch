    }

    .video-popup .slick-prev {
      left: -20px;
    }
  }

  @media only screen and (max-width: 768px) {
    .video-slide {
      width: 200px;
    }

    .video-thumbnail video {
      min-height: 250px;
    }
  }

  @media only screen and (max-width: 576px) {
    .video-slide {
      width: 180px;
    }

    .video-thumbnail video {
      min-height: 220px;
    }
  }

  @media only screen and (max-width: 479px) {
    .video-thumbnail video {
      min-height: 200px;
    }
  }

  @media only screen and (max-width: 379px) {
    .vdtst .product-info {
      bottom: -35%;
    }

    .vdtst h3 {
      font-size: 10px;
    }

    .product-info h3 {
      height: 30px;
    }

    .video-slide {
      width: 160px;
    }

    .video-thumbnail video {
      min-height: 180px;
    }

    .video-popup-content {
      position: relative;
      width: 90%!important;
