<section class="video-slider-container trusted-stories-wrapper">
  <h2><em>Trusted</em><span>Stories</span></h2>

  <div class="video-slider-wrapper">
    <div class="video-slider">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'video_story' -%}
          <div class="video-slide" data-video-url="{{ block.settings.video_url }}" data-product-title="{{ block.settings.product_title }}" data-product-price="{{ block.settings.product_price }}">
            <div class="vdtst">
              <!-- Video Thumbnail -->
              <div class="video-thumbnail">
                <video autoplay="" muted="" loop="" playsinline="" preload="auto" style="background: transparent;">
                  <source src="{{ block.settings.video_url }}" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              </div>
              <!-- Product Information -->
              <div class="product-info">
                <h3>{{ block.settings.product_title }}</h3>
                <div class="price-section">
                  {%- if block.settings.original_price > block.settings.sale_price -%}
                    <p class="original-price">
                      <s>₹ {{ block.settings.original_price | money_without_currency }}</s>
                    </p>
                  {%- endif -%}
                  <p class="sale-price">
                    ₹ {{ block.settings.sale_price | money_without_currency }}
                  </p>
                </div>
              </div>
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
    </div>
  </div>

  <!-- Popup with Slick Slider -->
  <div id="video-popup" class="video-popup hidden">
    <div class="video-popup-content">
      <span id="close-popup" class="close-popup">×</span>
      <div class="popup-slider">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'video_story' -%}
              <div class="popup-slide" data-video-url="{{ block.settings.video_url }}">
                <div class="customvbc">
                  <div class="popup-product-info-video">
                    <video controls="">
                      <source src="{{ block.settings.video_url }}" type="video/mp4">
                      Your browser does not support the video tag.
                    </video>
                  </div>

                  <div class="popup-product-info">
                    <div class="product-txt">
                      <h3>{{ block.settings.product_title }}</h3>

                      <div class="price-section">
                        {%- if block.settings.original_price > block.settings.sale_price -%}
                          <p class="original-price">
                            <s>₹ {{ block.settings.original_price | money_without_currency }}</s>
                          </p>
                        {%- endif -%}
                        <p class="sale-price">
                          ₹ {{ block.settings.sale_price | money_without_currency }}
                        </p>
                      </div>
                    </div>

                    <div class="atcviewdiv">
                      <div class="view-buttontxt">
                        <a href="{{ block.settings.product_url }}" class="popup-view-product-btn" target="_blank">
                          View Info
                        </a>
                      </div>

                      <div class="atc-button">
                        <a href="{{ block.settings.add_to_cart_url }}" class="add-to-cart-btn hs-event-static" target="_blank">
                          Add to Cart
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

