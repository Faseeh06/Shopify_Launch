<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css">
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const videoSlides = document.querySelectorAll(".video-slide");
  const popup = document.getElementById("video-popup");
  const closePopup = document.getElementById("close-popup");
  const popupSlider = document.querySelector(".popup-slider");
  let activeSlideIndex = 0;
  let popupVideos = [];

  // Initialize Slick Slider for video thumbnails
  $(".video-slider").slick({
    slidesToShow: 6,
    slidesToScroll: 1,
    arrows: false,
    dots: false,
    infinite: false,
    centerMode: false,
    variableWidth: false,
    responsive: [
      {
        breakpoint: 1200,
        settings: {
          slidesToShow: 5,
          slidesToScroll: 1,
        },
      },
      {
        breakpoint: 992,
        settings: {
          slidesToShow: 4,
          slidesToScroll: 1,
        },
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
        },
      },
      {
        breakpoint: 576,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1,
        },
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1.5,
          slidesToScroll: 1,
        },
      },
    ],
  });

  // Center the slider after initialization
  setTimeout(function() {
    const sliderList = document.querySelector('.video-slider .slick-list');
    const sliderTrack = document.querySelector('.video-slider .slick-track');
    if (sliderList && sliderTrack) {
      const listWidth = sliderList.offsetWidth;
      const trackWidth = sliderTrack.offsetWidth;
      if (trackWidth < listWidth) {
        const margin = (listWidth - trackWidth) / 2;
        sliderTrack.style.marginLeft = margin + 'px';
      }
    }
  }, 100);

  // Open popup and sync the video slider
  videoSlides.forEach((slide, index) => {
    slide.addEventListener("click", function () {
      activeSlideIndex = index;
      popup.classList.remove("hidden");
      initializePopupSlider();
      updatePopupSlider(activeSlideIndex);
      autoplayCurrentVideo(activeSlideIndex);
    });
  });

  // Close popup
  closePopup.addEventListener("click", function () {
    popup.classList.add("hidden");
    stopAllVideos();
    destroyPopupSlider();
  });

  // Function to initialize popup slider
  function initializePopupSlider() {
    if (popupSlider && !$(popupSlider).hasClass('slick-initialized')) {
      $(popupSlider).slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        arrows: true,
        dots: false,
        autoplay: false,
        infinite: true,
        fade: true
      });

      popupVideos = popupSlider.querySelectorAll("video");

      $(popupSlider).on('beforeChange', function(event, slick, currentSlide, nextSlide) {
        pausePreviousVideo(currentSlide);
        autoplayCurrentVideo(nextSlide);
      });
    }
  }

  // Function to destroy popup slider
  function destroyPopupSlider() {
    if ($(popupSlider).hasClass('slick-initialized')) {
      $(popupSlider).slick('unslick');
    }
  }

  // Update the popup slider to show the correct slide
  function updatePopupSlider(index) {
    $(popupSlider).slick('slickGoTo', index);
  }

  // Pause previous video
  function pausePreviousVideo(index) {
    const video = popupVideos[index];
    if (video) {
      video.pause();
    }
  }

  // Autoplay current video
  function autoplayCurrentVideo(index) {
    const video = popupVideos[index];
    if (video) {
      video.play();
    }
  }

  // Stop all videos when the popup is closed
  function stopAllVideos() {
    popupVideos.forEach(video => video.pause());
  }
});
</script>

