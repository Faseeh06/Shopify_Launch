    }

    .popup-product-info-video {
      width: 100%;
    }

    .close-popup {
      z-index: 999;
    }

    .customvbc {
      display: flex;
      width: 97%;
      position: relative;
      top: 50px;
      background: #fff;
      padding: 10px;
      justify-content: center;
      margin: 0 auto;
    }

    .popup-product-info h3 {
      font-size: 10px;
      margin: 0 auto;
    }

    .popup-product-info p {
      font-size: 10px;
    }

    .popup-product-info .atc-button {
      display: none;
    }

    .video-popup .slick-next:before, .video-popup .slick-prev:before {
      font-size: 24px;
    }

    .video-popup .slick-prev {
      left: -15px;
    }

    .view-buttontxt a {
      font-size: 10px;
      margin-top: 10px;
      transition: background-color 0.3s ease;
      text-transform: uppercase;
      font-weight: 900;
      width: 90px;
      text-align: center;
    }

    .vdtst .product-info {
      bottom: -25%;
    }

    .popup-product-info .price-section {
