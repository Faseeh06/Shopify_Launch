{%- style -%}
  /* Video Slider Container */
  .video-slider-container h2 {
    text-align: center;
    margin-top: 5px;
  }

  .video-slider-container h2 span {
    border-bottom: 5px solid #f4c166;
    display: inline-block;
    height: 1.2em;
    font-weight: 700;
  }

  .video-slider-container h2 em {
    padding-right: 10px;
  }

  .trusted-stories-wrapper {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  /* Price Section */
  .price-section {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5px;
  }

  .popup-product-info .price-section {
    justify-content: left;
    gap: 10px;
  }

  /* Video Slide Styles */
  .vdtst .product-info {
    position: absolute;
    bottom: -25%;
    width: 95%;
    text-align: center;
    margin: 0 auto;
    left: 0;
    right: 0;
  }


  .vdtst h3 {
    font-size: 12px;
  }

  .vdtst {
    width: 100%;
    padding: 7px;
    margin-bottom: 100px;
    position: relative;
  }

  .vdtst .product-info p {
    font-size: 12px;
    font-weight: 900;
  }

  .video-slider-container {
    position: relative;
    overflow-x: hidden;
    padding-bottom: 20px;
    max-width: 100%;
    padding-left: 0;
    padding-right: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .video-slider-wrapper {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .video-slider {
    display: flex;
    gap: 20px;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  /* Center the slick slider */
  .video-slider-wrapper .slick-list {
    width: 100% !important;
    margin: 0 auto !important;
    text-align: center;
  }

  .video-slider-wrapper .slick-track {
    display: flex !important;
    margin: 0 auto !important;
    text-align: center;
  }

  .video-slider-wrapper .slick-slide {
    text-align: center;
  }

  /* Center slider when content is smaller than container */
  .video-slider-wrapper .slick-list {
    display: flex;
    justify-content: center;
  }

  .video-slider-wrapper .slick-track {
    display: flex !important;
    justify-content: center;
  }

  .video-slide {
    width: 220px;
    cursor: pointer;
    text-align: center;
    background: #fff;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }

  .video-thumbnail {
    width: 100%;
    height: auto;
  }

  .video-thumbnail video {
    width: 100%;
    height: auto;
    min-height: 280px;
    object-fit: cover;
    border-radius: 10px;
  }

  .video-thumbnail video::-webkit-media-controls {
    display: none !important;
  }

  .video-thumbnail video::before,
  .video-thumbnail video::after {
    display: none !important;
  }

  .video-thumbnail video[poster] {
    object-fit: cover;
  }

  .video-thumbnail video {
    background: transparent !important;
  }

  /* Hide any video loading states or poster images */
  .video-thumbnail video::-webkit-media-controls-panel,
  .video-thumbnail video::-webkit-media-controls-play-button,
  .video-thumbnail video::-webkit-media-controls-current-time-display,
  .video-thumbnail video::-webkit-media-controls-time-remaining-display,
  .video-thumbnail video::-webkit-media-controls-timeline,
  .video-thumbnail video::-webkit-media-controls-volume-slider,
  .video-thumbnail video::-webkit-full-page-media::-webkit-media-controls-panel {
    display: none !important;
  }

  /* Hide any loading images or poster images in video thumbnail only */
  .video-thumbnail > img,
  .video-thumbnail video[poster] {
    display: none !important;
  }

  .video-thumbnail video[poster]::before {
    display: none !important;
  }

  .product-info h3, .product-info p {
    margin: 5px 0;
  }

  .product-info h3 {
    height: 40px;
  }

  /* Popup Styles */
  .video-popup {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 9999;
  }

  .video-popup.hidden {
    display: none;
  }

  .video-popup-content {
    position: relative;
    width: 90%;
    max-width: 800px;
  }

  .close-popup {
    position: absolute;
    top: 10px;
    right: -65px;
    font-size: 40px;
    color: #fff;
    cursor: pointer;
  }

  .customvbc {
    display: flex;
    width: 100%;
    position: relative;
    top: 50px;
    background: #fff;
    padding: 25px;
  }

  .popup-product-info-video {
    width: 50%;
  }

  .popup-product-info-video video {
    width: 100%;
    object-fit: cover;
    height: 90%;
  }

  .popup-product-info {
    width: 50%;
    padding-left: 30px;
  }

  .popup-product-info h3 {
    color: #000;
    margin-bottom: 0;
  }

  .popup-product-info p {
    font-weight: 900;
  }

  body.popup-active {
    overflow: hidden;
    height: 100%;
  }

  .add-to-cart-btn {
    display: inline-block;
    padding: 10px 15px;
    background-color: #f4c83e;
    color: #000;
    text-decoration: none;
    border-radius: 5px;
    font-size: 12px;
    margin-top: 10px;
    transition: background-color 0.3s ease;
    text-transform: uppercase;
    font-weight: 900;
    width: 130px;
    text-align: center;
  }

  .add-to-cart-btn:hover {
    background-color: #f4c83e;
  }

  .video-popup .slick-next:before,
  .video-popup .slick-prev:before {
    font-size: 45px;
  }

  .video-popup .slick-next {
    right: -70px;
  }

  .video-popup .slick-prev {
    left: -90px;
  }

  .view-buttontxt a {
    display: inline-block;
    padding: 10px 15px;
    background-color: #f4c83e;
    color: #000;
    text-decoration: none;
    border-radius: 5px;
    font-size: 12px;
    margin-top: 10px;
    transition: background-color 0.3s ease;
    text-transform: uppercase;
    font-weight: 900;
    width: 130px;
    text-align: center;
  }

  .atcviewdiv {
    display: flex;
    gap: 10px;
  }

