  @media only screen and (max-width: 1024px) {
    .popup-product-info h3 {
      font-size: 16px;
    }

    .video-popup .slick-next {
      right: -15px;
    }

    .video-popup .slick-prev {
      left: -35px;
    }

    .close-popup {
      position: absolute;
      top: -15px;
      right: -15px;
    }

    .customvbc {
      display: flex;
      width: 95%;
      position: relative;
      top: 50px;
      background: #fff;
      padding: 25px;
      justify-content: center;
      margin: 0 auto;
    }
  }

  @media only screen and (max-width: 768px) {
    .vdtst .product-info {
