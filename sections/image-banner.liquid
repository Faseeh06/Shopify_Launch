{% comment %}theme-check-disable UndefinedObject{% endcomment %}

{%- style -%}
  .image-banner {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .image-banner {
      margin-top: {{ section.settings.margin_top }}px;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .image-banner__container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .image-banner__image {
    width: 100%;
    height: auto;
    display: block;
    {%- unless section.settings.full_size -%}
      max-height: {{ section.settings.max_height }}px;
    {%- endunless -%}
  }

  @media screen and (max-width: 749px) {
    .image-banner__image {
      {%- unless section.settings.full_size -%}
        max-height: {{ section.settings.mobile_max_height }}px;
      {%- endunless -%}
    }
  }

  {%- if section.settings.full_size -%}
    .image-banner__image {
      max-height: none;
      object-fit: cover; /* Ensures it covers if there are other constraints, though width 100% height auto usually works */
      border-radius: 0 !important;
    }
    .image-banner__container {
      border-radius: 0 !important;
    }
  {%- endif -%}
{%- endstyle -%}

<section class="image-banner color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <{% if section.settings.link != blank %}a href="{{ section.settings.link }}"{% else %}div{% endif %} class="image-banner__container">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="
          {{ section.settings.image | image_url: width: 750 }} 750w,
          {{ section.settings.image | image_url: width: 1100 }} 1100w,
          {{ section.settings.image | image_url: width: 1440 }} 1440w,
          {{ section.settings.image | image_url: width: 1920 }} 1920w
        "
        sizes="(min-width: 1100px) 1920px, (min-width: 750px) 1100px, 750px"
        alt="{{ section.settings.image.alt | escape }}"
        class="image-banner__image"
        loading="lazy"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    {%- elsif section.settings.custom_image_url != blank -%}
      <img
        src="{{ section.settings.custom_image_url }}"
        alt="Custom Banner"
        class="image-banner__image"
        loading="lazy"
        width="1920"
        height="889"
      >
    {%- else -%}
      <img
        src="https://www.rasluxuryoils.com/cdn/shop/files/Desktop_1440x450_a38cbf6f-ca95-497d-962c-96e60898b2aa_1920x889.jpg?v=1761573193"
        srcset="
          https://www.rasluxuryoils.com/cdn/shop/files/Desktop_1440x450_a38cbf6f-ca95-497d-962c-96e60898b2aa_750x375.jpg?v=1761573193 750w,
          https://www.rasluxuryoils.com/cdn/shop/files/Desktop_1440x450_a38cbf6f-ca95-497d-962c-96e60898b2aa_1100x550.jpg?v=1761573193 1100w,
          https://www.rasluxuryoils.com/cdn/shop/files/Desktop_1440x450_a38cbf6f-ca95-497d-962c-96e60898b2aa_1440x720.jpg?v=1761573193 1440w,
          https://www.rasluxuryoils.com/cdn/shop/files/Desktop_1440x450_a38cbf6f-ca95-497d-962c-96e60898b2aa_1920x889.jpg?v=1761573193 1920w
        "
        sizes="(min-width: 1100px) 1920px, (min-width: 750px) 1100px, 750px"
        alt="RAS Luxury Oils Banner"
        class="image-banner__image"
        loading="lazy"
        width="1920"
        height="889"
      >
    {%- endif -%}
  </{% if section.settings.link != blank %}a{% else %}div{% endif %}>
</section>

{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "checkbox",
      "id": "full_size",
      "label": "Full Size Image (No Max Height/Borders)",
      "default": false
    },
    {
      "type": "text",
      "id": "custom_image_url",
      "label": "Custom Image URL"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "range",
      "id": "max_height",
      "min": 200,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Maximum height (desktop)",
      "default": 500
    },
    {
      "type": "range",
      "id": "mobile_max_height",
      "min": 150,
      "max": 600,
      "step": 25,
      "unit": "px",
      "label": "Maximum height (mobile)",
      "default": 300
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top margin",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Image Banner"
    }
  ]
}
{% endschema %}